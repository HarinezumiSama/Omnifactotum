<?xml version="1.0" encoding="utf-8"?>

<Project>
    <PropertyGroup>
        <BaseVersion>0.4</BaseVersion>
        <BuildNumber></BuildNumber>
        <BuildDateYear>2020</BuildDateYear>
    </PropertyGroup>

    <PropertyGroup>
        <Version>0.0.0</Version>
    </PropertyGroup>

    <PropertyGroup>
        <RestoreProjectStyle>PackageReference</RestoreProjectStyle>
    </PropertyGroup>

    <PropertyGroup>
        <Authors>Vitalii Maklai</Authors>
        <Company>$(Authors)</Company>
        <Product>$(SolutionName)</Product>
        <Description>$(Product): Helper classes and extension methods for .NET projects.</Description>
        <Copyright>Copyright © Vitalii Maklai 2004-$(BuildDateYear)</Copyright>
        <RepositoryUrl>https://github.com/HarinezumiSama/$(SolutionName)</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageProjectUrl>$(RepositoryUrl)</PackageProjectUrl>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReleaseNotes></PackageReleaseNotes>
        <PackageTags>C#;CSharp;omnifactotum;omni;factotum;aid;assistant;extension;extensions;helper;helpers;common</PackageTags>
        <PackageOutputPath>$(SolutionDir)\..\bin\NuGet\</PackageOutputPath>
    </PropertyGroup>

    <PropertyGroup>
        <DebugSymbols>true</DebugSymbols>
        <DebugType>full</DebugType>
    </PropertyGroup>

    <PropertyGroup>
        <Version Condition=" '$(BaseVersion)' != '' And '$(BuildNumber)' != '' And '$(BuildNumber)' != '0' ">$(BaseVersion).$(BuildNumber)</Version>
        <PackageVersion>$(Version)</PackageVersion>
        <AssemblyVersion>$(Version).0</AssemblyVersion>
        <FileVersion>$(AssemblyVersion)</FileVersion>
        <!--<InformationalVersion>$(AssemblyVersion)</InformationalVersion>-->
        <SignAssembly>true</SignAssembly>
    </PropertyGroup>

    <Choose>
        <When Condition=" '$(SIGN_OMNIFACTOTUM)' == 'true' Or '$(SIGN_OMNIFACTOTUM)' == '1' ">
            <PropertyGroup>
                <AssemblyOriginatorKeyFile>$(SolutionDir)\Common\$(SolutionName).ci.pfx</AssemblyOriginatorKeyFile>
                <DelaySign>false</DelaySign>
            </PropertyGroup>
        </When>
        <Otherwise>
            <PropertyGroup>
                <AssemblyOriginatorKeyFile>$(SolutionDir)\Common\$(SolutionName).snk</AssemblyOriginatorKeyFile>
                <DelaySign>true</DelaySign>
            </PropertyGroup>
        </Otherwise>
    </Choose>
</Project>